{
  "name": "Marketplace",
  "version": "0.1.0",
  "description": "Decentraland's LAND Manager, Wallet and Marketplace",
  "main": "src/server.js",
  "scripts": {
    "lint": "./node_modules/eslint/bin/eslint.js .",
    "lint:fix": "./node_modules/eslint/bin/eslint.js --fix .",
    "test": "./node_modules/mocha/bin/mocha -r babel-register -r specs/spec_utils.js specs/setup.js src/*.spec.js src/**/*.spec.js",
    "watch:test": "./node_modules/mocha/bin/mocha -r babel-register -r specs/spec_utils.js specs/setup.js src/*.spec.js src/**/*.spec.js --watch",
    "init-db": "./scripts/initDb.js",
    "migrate": "./migrations/migrate",
    "renew-blockchain-data": "./scripts/renewBlockchainData.js",
    "seed": "./scripts/seed.js",
    "monitor-blockchain": "./scripts/monitor/index.js store",
    "build": "npm run lint && npm run test",
    "start": "cd src && babel-node server.js",
    "dev": "nodemon --exec npm run start"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/decentraland/marketplace.git"
  },
  "keywords": [
    "decentraland",
    "marketplace",
    "dapp"
  ],
  "author": "Decentraland",
  "license": "ISC",
  "dependencies": {
    "bignumber.js": "^5.0.0",
    "body-parser": "^1.18.2",
    "decentraland-commons": "^3.3.2",
    "express": "^4.16.2",
    "node-pg-migrate": "^2.23.0",
    "uuid": "^3.1.0"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-eslint": "^8.0.1",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.6.0",
    "babel-register": "^6.26.0",
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "eslint": "^4.12.1",
    "eslint-config-prettier": "^2.6.0",
    "eslint-plugin-prettier": "^2.3.1",
    "eslint-plugin-react": "^7.5.1",
    "faker": "^4.1.0",
    "mocha": "^4.0.1",
    "nodemon": "^1.14.11",
    "prettier": "^1.10.2",
    "sinon": "^4.2.1"
  }
}
